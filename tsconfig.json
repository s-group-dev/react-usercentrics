{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["dom", "ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "paths": {
            "@s-group/react-usercentrics/augmented": ["./augmented.d.ts"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": ["**/*.cjs", "**/*.js", "**/*.ts", "**/*.tsx", "./jest-setup.ts"],
    "exclude": ["node_modules"]
}
